  <script>
    // Mobile nav toggle (Î±Ï€Î»ÏŒ)
    const burger = document.getElementById('hamburger');
    const nav = document.querySelector('.navlinks');
    burger?.addEventListener('click', () => {
      const open = nav.style.display === 'flex';
      nav.style.display = open ? 'none' : 'flex';
      burger.setAttribute('aria-expanded', String(!open));
    });

    // ÎˆÏ„Î¿Ï‚ footer
    document.getElementById('year').textContent = new Date().getFullYear();

    // Î‘Ï€Î»ÏŒÏ‚ Î­Î»ÎµÎ³Ï‡Î¿Ï‚ Â«Î‘Î½Î¿Î¹Ï‡Ï„Î¬ Ï„ÏÏÎ±Â» (Î¼Îµ Î²Î¬ÏƒÎ· Ï„Î¿Ï€Î¹ÎºÎ® ÏÏÎ± browser)
    // Î ÏÎ¿ÏƒÎ±ÏÎ¼ÏŒÏƒÏ„Îµ ÏÏÎµÏ‚ Î±Î½ Î±Î»Î»Î¬Î¾Î¿Ï…Î½
    const ranges = {
      1: ['12:00','23:30'], // Î”ÎµÏ…Ï„Î­ÏÎ±
      2: ['12:00','23:30'], // Î¤ÏÎ¯Ï„Î·
      3: ['12:00','23:30'], // Î¤ÎµÏ„Î¬ÏÏ„Î·
      4: ['12:00','23:30'], // Î Î­Î¼Ï€Ï„Î·
      5: ['12:00','24:30'], // Î Î±ÏÎ±ÏƒÎºÎµÏ…Î®
      6: ['12:00','24:30'], // Î£Î¬Î²Î²Î±Ï„Î¿
      0: ['12:30','23:30'], // ÎšÏ…ÏÎ¹Î±ÎºÎ® (0)
    };
    function parseHM(hm){
      const [h,m] = hm.split(':').map(Number); return h*60+m;
    }
    function checkOpen(){
      const now = new Date();
      const day = now.getDay();
      const mins = now.getHours()*60 + now.getMinutes();
      const r = ranges[day];
      const el = document.getElementById('openBadge');
      if(!r || !el) return;
      const openM = parseHM(r[0]);
      const closeM = parseHM(r[1]);
      const open = mins >= openM && mins <= closeM;
      el.textContent = open ? 'Î‘Î½Î¿Î¹Ï‡Ï„Î¬ Ï„ÏÏÎ±' : 'ÎšÎ»ÎµÎ¹ÏƒÏ„Î¬ Î±Ï…Ï„Î® Ï„Î· ÏƒÏ„Î¹Î³Î¼Î®';
      el.style.background = open ? '#eaffea' : '#ffeeee';
      el.style.color = open ? '#065f46' : '#7f1d1d';
      el.style.borderColor = open ? '#10b98133' : '#ef444433';
    }
    checkOpen();
  </script>
